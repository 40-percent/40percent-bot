{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "allowJs": false,
    "target": "ES5",
    "strict": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "ES2021"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
